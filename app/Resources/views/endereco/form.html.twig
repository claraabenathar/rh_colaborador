{% extends 'base.html.twig' %}
{% block title %} Cadastrar Endereço | RH {% endblock %}
{% block content %}
    <h1>
        Cadastrar Endereço  {% if funcionario is defined%} de {{ funcionario.nome}}{% endif %}
    </h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.logradouro, {'attr': {'title':'Rua, Avenida..','class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.numero, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.complemento, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.bairro, {'attr': {'class': 'form-control'}}) }}
            </div>
            {#<input type="submit" value="Create" />#}
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="button" onclick="javascript:history.go(-1)" class="btn btn-default">Voltar</button>
        {{ form_end(form) }}

{% endblock %}
