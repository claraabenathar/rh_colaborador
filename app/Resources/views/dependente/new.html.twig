{% extends 'base.html.twig' %}
{% block title %} Cadastrar Dependente | RH {% endblock %}
{% block content %}
    <h1>Dependente {% if funcionario is defined%} de {{ funcionario.nome}}{% endif %}</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nome, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dataNascimento, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.parentesco, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <button type="button" onclick="javascript:history.go(-1)" class="btn btn-default">Voltar</button>
    {{ form_end(form) }}

{% endblock %}
