{% extends 'base.html.twig' %}
{% block title %} Cadastrar Funcionário | RH {% endblock %}
{% block content %}
    <h1>Cadastrar Funcionário</h1>

    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role':'form'} }) }}
        {#{{ form_widget(form) }}#}
        <div class="form-group">
            {{ form_row(form.cpf, {'attr': {'title':' CPF','class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.nome, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dataNascimento, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.sexo, {'attr': {'class': 'form-control'}}) }}
        </div>
        {#<input type="submit" value="Create" />#}

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="{{ path('funcionario_index') }}" class="btn btn-default">Voltar</a>
    {{ form_end(form) }}

{% endblock %}